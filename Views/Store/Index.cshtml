@using MvcMusic3.Models
@model IEnumerable<Genre>

@{
    ViewBag.Title = "Store";
}

<h2>Browse Genres</h2>

<p>
    Select from @Model.Count() genres:
</p>

<ul>
    @foreach(var genre in Model)
    {
        @*<li>@genre.Name</li>*@
        // gen == name of the parameter
        <li>@Html.ActionLink(genre.Name, "Browse", new { gen = genre.Name })</li>
    }
</ul>

